---
import { Image } from 'astro:assets';
import profilePicture from '../assets/Itay Lisaey Profile Cropped.png';
import Layout from '../layouts/BaseLayout.astro';
---

<Layout
  title='About Me'
  description='Itay Lisaey, Software Engineer'
  addtionalClass='flex flex-col justify-start gap-6'
>
  <header title='header' class='flex items-center space-x-4'>
    <Image
      class='font-bold text-sm rounded-xl max-w-[10rem]'
      src={profilePicture}
      alt='Itay Lisaey Profile'
    />
    <section class='flex flex-col justify-start h-full'>
      <h1 class='font-bold text-xl'>Itay Lisaey</h1>
      <p>Software Engineer @ <a class="underline" href="chordio.com">Chordio</a></p>
      <span>üåê Israel</span>
    </section>
  </header>
  <section title='summary'>
    <!-- <h2 class='text-xl font-bold'>Summary</h2> -->
    <p>
